# Environment Configuration
# Copy this file to .env and fill in your actual values

# SendGrid API Key (Get from https://app.sendgrid.com/settings/api_keys)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Verified sender email (Must be verified in SendGrid)
SENDER_EMAIL=noreply@yourwebsite.com

# Your website URL
WEBSITE_URL=http://localhost:8080

# Server port
PORT=3000

# Admin key for sending newsletters (create a strong random string)
ADMIN_KEY=your_secure_admin_key_here
